{
  "permissions": {
    "allow": [
      "Read(./.env.example)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.local)"
    ],
    "ask": []
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun run .claude/hooks/UserPromptSubmit.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun run .claude/hooks/PostToolUse.ts"
          }
        ]
      }
    ]
  }
}